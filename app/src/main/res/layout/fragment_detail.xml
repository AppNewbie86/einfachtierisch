<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradation">

        <TextView
            android:id="@+id/numberOfDogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/bungee"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameOfDogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/bungee"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/numberOfDogs"
            app:layout_constraintTop_toBottomOf="@+id/numberOfDogs" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/allerta"
            android:scrollbars="vertical"

            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/nameOfDogs"
            app:layout_constraintTop_toBottomOf="@+id/nameOfDogs" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/daywithdogBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="50dp"
            android:clickable="true"
            android:tooltipText="Schnuppertage vereinbaren"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/chatbot" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>